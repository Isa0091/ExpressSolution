@model ExpressSolution.Stores.WebAdmin.Models.Category.Output.DetailCategoryOutputVm
@{
    ViewData["Title"] = "Detail";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalle de Categoria</h2>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">Detalle</div>
                <div class="ibox-content">
                    <form method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" asp-for="CategoryInputVm.Id" name="Id" />

                        <div class="row">

                            @if (string.IsNullOrEmpty(Model.CategoryInputVm.Id) == false && Model.MultimediaType== ExpressSolution.MultimediaType.Image)
                            {

                                <div class="col-md-12 center-block">
                                    <img src="@Model.UrlMultimedia" width="50">
                                 </div>

                            }

                            <div class="col-md-12 text-center">
                                <div class="form-group">
                                    <label asp-for="CategoryInputVm.Multimedia">Multimedia</label>
                                    <input asp-for="CategoryInputVm.Multimedia" type="file" class="form-control" width="40" name="Multimedia" />
                                    @Html.ValidationMessage("Multimedia", new { @class = "text-danger small form-text" })
                                    <br />
                                </div>
                               
                            </div>

                        </div>
                            <div class="row">

                                <div class="col-md-6">
                                    <label asp-for="CategoryInputVm.Name">Nombre</label>
                                    <input asp-for="CategoryInputVm.Name" class="form-control" name="Name" />
                                    @Html.ValidationMessage("Name", new { @class = "text-danger small form-text" })
                                    <br />
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CategoryInputVm.Description">Descripcion</label>
                                    <input asp-for="CategoryInputVm.Description" class="form-control" name="Description" />
                                    @Html.ValidationMessage("Description", new { @class = "text-danger small form-text" })
                                    <br />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="CategoryInputVm.ExtendedDescription">Extended Descripcion</label>
                                    <div class="editor-texto">
                                        @Html.TextAreaFor(x => x.CategoryInputVm.ExtendedDescription, new { @class = "editorDescripcion" })
                                    </div>

                                    @Html.ValidationMessage("ExtendedDescription", new { @class = "text-danger small form-text" })
                                    <br />
                                </div>

                                @if (string.IsNullOrEmpty(Model.CategoryInputVm.Id) == false)
                                {
                                    <div class="col-md-6">
                                        <label asp-for="DateCreated">Fecha creacion</label>
                                        <input asp-for="DateCreated" disabled class="form-control" name="DateCreated" />
                                        @Html.ValidationMessage("DateCreated", new { @class = "text-danger small form-text" })
                                        <br />
                                    </div>

                                    <div class="col-md-6">
                                        <input asp-for="Active" type="checkbox" name="Activo" />
                                        <label asp-for="Active">Activo</label>
                                        <br />
                                        @Html.ValidationMessage("Activo", new { @class = "text-danger small form-text" })
                                        <br />
                                    </div>

                                }


                                <div class="col-md-4">
                                    <br />
                                    <button type="submit" class="btn btn-primary" style="margin-top: 5px;">Guardar</button>
                                </div>
                            </div>

                            <br />
                            <div class="row">

                            </div>
                            <br />
                        </form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/js/plugins/summernote/summernote.min.js"></script>

    <script>
        $(document).ready(function () {

            $('.editorDescripcion').summernote();

        });
    </script>
}

